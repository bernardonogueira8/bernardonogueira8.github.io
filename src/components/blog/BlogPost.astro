---
const { title, url, date, image, tags = [], languages = [] } = Astro.props;

import Tag from "../ui/Tag.astro";
import ReadMore from "../ui/ReadMore.astro"; // Manter o nome do componente, mas o texto interno seria "Ler Mais"
import DatePub from "./DatePub.astro"; // Manter o nome do componente, mas o texto interno seria traduzido
import Capsule from "../ui/Capsule.astro";

// Nota: O texto interno de 'ReadMore' e 'DatePub' deve ser traduzido dentro desses componentes (Astro.props, não incluídos aqui)
// Sugestão de tradução: ReadMore = "Ler Mais" ou "Detalhes"
// Sugestão de tradução: DatePub = Exibição de Data da Publicação

---

<article class="bg-white dark:bg-zinc-900/25 dark:border dark:border-zinc-800 dark:hover:border-amber-300 hover:backdrop-blur-none backdrop-blur-lg shadow-sm overflow-auto hover:shadow-[5px_5px_rgba(146,80,0,0.4),10px_10px_rgba(146,80,0,0.3),15px_15px_rgba(146,80,0,0.2),20px_20px_rgba(146,80,0,0.1),25px_25px_rgba(146,80,0,0.05)] p-8 max-md:p-6 w-full flex justify-between items-center bg-linear-to-r hover:from-amber-200 hover:to-yellow-200 dark:hover:from-orange-500 dark:hover:to-yellow-500 transition-all hover:scale-105 duration-200 ease-in-out gap-8 max-md:gap-4 rounded-3xl max-md:flex-col-reverse">
    <div class="flex flex-col">
        <a href={url} class="flex flex-col gap-4 w-full">
            <DatePub date={date} />
            <h2 class="dark:text-orange-50 text-blacktext text-3xl font-bold text-pretty">{title}</h2>
            <ReadMore />
        </a>
        <div class="gap-3 mt-3 flex flex-col">
            <div class="flex gap-2 flex-wrap">
                
                {languages.length > 0 && languages.map((language: string) => <Capsule lang={language} />)} 
            </div>
            <div class="gap-2 flex flex-wrap justify-start items-center">
                {tags.length > 0 && tags.map((tag: string) => <Tag tag={tag}>{tag}</Tag>)}
            </div>
        </div>
    </div>
    {image?.url && (
        <a href={url} style={{ backgroundImage: `url(${image.url})` }} class="shrink-0 rounded-2xl bg-center bg-cover aspect-video max-md:aspect-video w-2/6 max-md:w-full" />
    )}
</article>